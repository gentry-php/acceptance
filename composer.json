{
    "name": "gentry/acceptance",
    "description": "Acceptance tests for the Gentry test framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marijn Ophorst",
            "email": "marijn@monomelodies.nl"
        }
    ],
    "require": {
        "ext-bz2": ">=7.0",
        "gentry/gentry": "^0.9.0",
        "jonnyw/php-phantomjs": "4.*"
    },
    "autoload": {
        "psr-4": {
            "Gentry\\Acceptance\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gentry\\Acceptance\\": "src",
            "Gentry\\Acceptance\\Tests\\": "tests",
            "Gentry\\Acceptance\\Demo\\": "demo"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    }
}
